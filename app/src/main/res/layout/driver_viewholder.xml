<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/cardview_light_background"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Arsen"
            android:id="@+id/driver_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="88dp"
            android:layout_height="48dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="EDIT"
            android:background="@color/cardview_light_background"
            android:textColor="@color/wallet_holo_blue_light"
            android:layout_marginLeft="16dp"
            card_view:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="38dp"
            card_view:layout_constraintTop_toBottomOf="@+id/driver_id"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/button_all_machines"
            android:layout_width="88dp"
            android:layout_height="48dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="CARS OPERATED"
            android:background="@color/cardview_light_background"
            android:textColor="@color/wallet_holo_blue_light"
            android:layout_marginTop="38dp"
            card_view:layout_constraintTop_toBottomOf="@+id/driver_id"
            card_view:layout_constraintLeft_toRightOf="@+id/button_edit"
            android:layout_marginLeft="161dp"
            android:layout_marginStart="161dp" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="88dp"
            android:layout_height="48dp"
            style="?android:attr/borderlessButtonStyle"
            android:text="DELETE"
            android:background="@color/cardview_light_background"
            android:textColor="@color/wallet_holo_blue_light"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="38dp"
            card_view:layout_constraintTop_toBottomOf="@+id/driver_id"
            card_view:layout_constraintLeft_toRightOf="@+id/button_all_machines"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintHorizontal_bias="0.95"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:id="@+id/edit_driver_name"
            android:layout_height="wrap_content"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/button_all_machines"
            android:visibility="gone">

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:hint="Enter new name here"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/save_new_name"
                android:layout_alignBottom="@id/edit_name"
                android:layout_alignParentLeft="true"
                android:background="@color/cardview_light_background"
                android:textColor="@color/wallet_holo_blue_light"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/edit_name"
                android:layout_marginLeft="8dp"
                card_view:layout_constraintLeft_toLeftOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discard_change"
                style="?android:attr/borderlessButtonStyle"
                android:text="Discard"
                android:layout_marginTop="0dp"
                card_view:layout_constraintTop_toBottomOf="@+id/edit_name"
                android:background="@color/cardview_light_background"
                android:textColor="@color/wallet_holo_blue_light"
                android:layout_marginRight="8dp"
                card_view:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>