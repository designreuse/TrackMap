<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintHorizontal_bias="0.501"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    tools:layout_editor_absoluteX="-130dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.testapp.tracktruck.MachineInfoActivity">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#C5E1A5" />

    <TextView
        android:id="@+id/textView_id_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Machine ID"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Machine ID"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="7dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView_machine_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_id_caption"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginRight="8dp"
        tools:text="Machine1"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />




    <TextView
        android:id="@+id/textView_LatLng_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Coordinates:"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        tools:text="Coordinates:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_coordinates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_LatLng_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="50.1245123, 30.2427245"
        app:layout_constraintLeft_toLeftOf="@+id/textView_LatLng_label" />

    <TextView
        android:id="@+id/textView_speed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="Speed:"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_coordinates"
        app:layout_constraintLeft_toLeftOf="@+id/textView_coordinates" />

    <TextView
        android:id="@+id/textView_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="7dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="30 km/h"
        app:layout_constraintTop_toBottomOf="@+id/textView_speed_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_speed_label" />

    <TextView
        android:id="@+id/textView_engine_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="Engine Status:"
        app:layout_constraintLeft_toLeftOf="@+id/textView_speed"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_speed" />

    <TextView
        android:id="@+id/textView_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="On"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_engine_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_engine_label" />

    <TextView
        android:id="@+id/textView_working_hours_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Working Time:"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintLeft_toLeftOf="@+id/textView_engine"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_engine" />

    <TextView
        android:id="@+id/textView_working_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="01:25:00"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_working_hours_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_working_hours_label" />

    <TextView
        android:id="@+id/textView_distance_travelled_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="Distance Travelled:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_working_hours"
        app:layout_constraintLeft_toLeftOf="@+id/textView_working_hours" />

    <TextView
        android:id="@+id/textView_distance_travelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="50 km"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_distance_travelled_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_distance_travelled_label" />

    <TextView
        android:id="@+id/textView_fuel_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:text="Fuel Consumption:"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_distance_travelled"
        app:layout_constraintLeft_toLeftOf="@+id/textView_distance_travelled" />

    <TextView
        android:id="@+id/textView_fuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="6 liters per km"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_fuel_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_fuel_label" />

    <TextView
        android:id="@+id/textView_alertCount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Battery Alerts:"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_fuel"
        app:layout_constraintLeft_toLeftOf="@+id/textView_fuel" />

    <TextView
        android:id="@+id/textView_alertCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="6 alerts"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_alertCount_label"
        app:layout_constraintLeft_toLeftOf="@+id/textView_alertCount_label" />

    <Button
        android:id="@+id/button_reset_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Time"
        android:onClick="resetTime"
        android:background="#FFEB3B"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_alertCount"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_detail"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reset_time" />

    <ImageView
        android:id="@+id/transparent_image"
        android:layout_width="0dp"
        android:layout_height="500dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reset_time"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>



